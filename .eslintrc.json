{
  "env": {
    "browser": true,
    "es2021": true,
    "node": true
  },
  "extends": [
    "trybe-frontend"
  ],
  "overrides": [{
    "files": ["src/tests/**/*.js"],
    "rules": {
      "max-len": [
        "error",
        {
          "code": 90,
          "ignoreComments": true,
          "ignoreUrls": true,
          "ignoreRegExpLiterals": true,
          "ignoreStrings": true
        }
      ],
      "max-lines": [ "off" ],
      "no-magic-numbers": ["off"]
    }
  }],
    "parserOptions": {
        "ecmaVersion": "latest",
        "sourceType": "module"
    },
    "plugins": [
        "react"
    ]
}
